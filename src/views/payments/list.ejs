<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Payments</title>
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <%- include('../partials/sidebar') %>
        <section class="content">
            <h2>Payment Records <a href="/agent/payments/new" class="btn">Record New Payment</a></h2>
            <table>
                <thead>
                    <tr>
                        <th>Lease ID</th>
                        <th>Tenant</th>
                        <th>Property & Room</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Payment For Month</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% payments.forEach(payment => { %>
                        <tr>
                            <td><%= payment.lease.id %></td>
                            <td><%= payment.lease.tenant.firstName %> <%= payment.lease.tenant.lastName %></td>
                            <td><%= payment.lease.room.property.name %> - Room <%= payment.lease.room.roomNumber %></td>
                            <td>$<%= payment.amount.toFixed(2) %></td>
                            <td><%= payment.paymentDate.toLocaleDateString() %></td>
                            <td><%= payment.paymentForMonth.toLocaleDateString() %></td>
                            <td><% if (payment.status === 'paid') { %>
    <span class="badge badge-success">
        <i data-lucide="check-circle"></i>
        <span>Paid</span>
    </span>
<% } else { %>
    <span class="badge badge-danger">
        <i data-lucide="alert-circle"></i>
        <span>Overdue</span>
    </span>
<% } %></td>
                            <td class="inline-flex">
                                <a href="/agent/payments/<%= payment.id %>" class="btn btn-sm btn-secondary">
    <i data-lucide="eye"></i>
    <span>View</span>
</a>
                                <a href="/agent/payments/<%= payment.id %>/edit" class="btn btn-sm btn-secondary">
    <i data-lucide="edit"></i>
    <span>Edit</span>
</a>
                                <form action="/agent/payments/<%= payment.id %>/delete" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-delete">
    <i data-lucide="trash-2"></i>
    <span>Delete</span>
</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>