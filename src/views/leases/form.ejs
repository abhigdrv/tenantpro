<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= title %></title>
    <style>
        .document-upload-section {
            margin-top: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        .document-row {
            display: flex;
            gap: 10px;
            margin-bottom: 10px;
            align-items: center;
        }
        .document-row select,
        .document-row input[type="file"],
        .document-row input[type="text"] {
            flex: 1;
        }
        .remove-doc-btn {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 8px 15px;
            cursor: pointer;
            border-radius: 3px;
        }
        .add-doc-btn {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 8px 15px;
            cursor: pointer;
            border-radius: 3px;
            margin-top: 10px;
        }
        .existing-documents {
            margin-top: 20px;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .doc-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-bottom: 1px solid #eee;
        }
        .doc-actions {
            display: flex;
            gap: 10px;
        }
        .doc-actions a,
        .doc-actions button {
            padding: 5px 10px;
            text-decoration: none;
            border-radius: 3px;
            border: none;
            cursor: pointer;
        }
        .download-btn {
            background-color: #007bff;
            color: white;
        }
        .delete-doc-btn {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <%- include('../partials/sidebar') %>
        <section class="content">
            <h2><%= title %></h2>
            <form action="/agent/leases/<%= lease ? lease.id + '/edit' : '' %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="tenantId">Tenant:</label>
                    <select name="tenantId" id="tenantId" required>
                        <% tenants.forEach(tenant => { %>
                            <option value="<%= tenant.id %>" <%= lease && lease.tenantId === tenant.id ? 'selected' : '' %>>
                                <%= tenant.firstName %> <%= tenant.lastName %>
                            </option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="roomId">Room:</label>
                    <select name="roomId" id="roomId" required>
                        <% rooms.forEach(room => { %>
                            <option value="<%= room.id %>" <%= lease && lease.roomId === room.id ? 'selected' : '' %>>
                                Room <%= room.roomNumber %> (<%= room.property.name %> - <%= room.status %>)
                            </option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="startDate">Start Date:</label>
                    <input type="date" name="startDate" id="startDate" value="<%= lease ? lease.startDate.toISOString().split('T')[0] : '' %>" required>
                </div>
                
                <div class="form-group">
                    <label for="endDate">End Date:</label>
                    <input type="date" name="endDate" id="endDate" value="<%= lease ? lease.endDate.toISOString().split('T')[0] : '' %>" required>
                </div>
                
                <div class="form-group">
                    <label for="rentAmount">Rent Amount:</label>
                    <input type="number" step="0.01" name="rentAmount" id="rentAmount" value="<%= lease ? lease.rentAmount : '' %>" required>
                </div>
                
                <div class="form-group">
                    <label for="depositPaid">Deposit Paid:</label>
                    <input type="number" step="0.01" name="depositPaid" id="depositPaid" value="<%= lease ? lease.depositPaid : '' %>">
                </div>

                <div class="document-upload-section">
                    <h3>Upload Documents</h3>
                    <div id="documentContainer">
                        <div class="document-row">
                            <select name="documentTypes" class="doc-type-select">
                                <option value="aadhar">Aadhar Card</option>
                                <option value="pan">PAN Card</option>
                                <option value="agreement">Lease Agreement</option>
                                <option value="photo">Photo ID</option>
                                <option value="income">Income Proof</option>
                                <option value="other">Other</option>
                            </select>
                            <input type="file" name="documents" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx">
                            <input type="text" name="descriptions" placeholder="Description (optional)">
                            <button type="button" class="remove-doc-btn" onclick="removeDocRow(this)">Remove</button>
                        </div>
                    </div>
                    <button type="button" class="add-doc-btn" onclick="addDocRow()">+ Add Another Document</button>
                    <p style="margin-top: 10px; color: #666; font-size: 0.9em;">
                        Allowed formats: PDF, JPG, PNG, DOC, DOCX (Max 5MB per file)
                    </p>
                </div>

                <% if (lease && lease.documents && lease.documents.length > 0) { %>
                    <div class="existing-documents">
                        <h3>Existing Documents</h3>
                        <% lease.documents.forEach(doc => { %>
                            <div class="doc-item">
                                <div>
                                    <strong><%= doc.documentType.toUpperCase() %></strong> - <%= doc.fileName %>
                                    <% if (doc.description) { %>
                                        <br><small><%= doc.description %></small>
                                    <% } %>
                                    <br><small>Uploaded: <%= new Date(doc.uploadedAt).toLocaleDateString() %></small>
                                </div>
                                <div class="doc-actions">
                                    <a href="/agent/leases/<%= lease.id %>/documents/<%= doc.id %>/download" class="download-btn">Download</a>
                                    <form action="/agent/leases/<%= lease.id %>/documents/<%= doc.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this document?');">
                                        <button type="submit" class="delete-doc-btn">Delete</button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
                <br />
                <button type="submit" class="btn">Save Lease</button>
            </form>
        </section>
    </main>
    <%- include('../partials/footer') %>

    <script>
        function addDocRow() {
            const container = document.getElementById('documentContainer');
            const newRow = document.createElement('div');
            newRow.className = 'document-row';
            newRow.innerHTML = `
                <select name="documentTypes" class="doc-type-select">
                    <option value="aadhar">Aadhar Card</option>
                    <option value="pan">PAN Card</option>
                    <option value="agreement">Lease Agreement</option>
                    <option value="photo">Photo ID</option>
                    <option value="income">Income Proof</option>
                    <option value="other">Other</option>
                </select>
                <input type="file" name="documents" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx">
                <input type="text" name="descriptions" placeholder="Description (optional)">
                <button type="button" class="remove-doc-btn" onclick="removeDocRow(this)">Remove</button>
            `;
            container.appendChild(newRow);
        }

        function removeDocRow(button) {
            const container = document.getElementById('documentContainer');
            if (container.children.length > 1) {
                button.parentElement.remove();
            } else {
                alert('At least one document row must remain.');
            }
        }
    </script>
</body>
</html>