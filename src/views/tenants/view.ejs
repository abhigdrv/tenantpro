<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Tenant Details</title>
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <%- include('../partials/sidebar') %>
        <section class="content">
            <h2>Tenant Details</h2>
            <div class="details-card">
                <h3><%= tenant.firstName %> <%= tenant.lastName %></h3>
                <p><strong>Email:</strong> <%= tenant.email %></p>
                <p><strong>Phone:</strong> <%= tenant.phone %></p>
                <p><strong>Date of Birth:</strong> <%= tenant.dob ? tenant.dob.toLocaleDateString() : 'N/A' %></p>
            </div>
            
            <h3>Associated Leases</h3>
            <% if (tenant.leases.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Lease ID</th>
                            <th>Property</th>
                            <th>Room</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Rent Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tenant.leases.forEach(lease => { %>
                            <tr>
                                <td><%= lease.id %></td>
                                <td><%= lease.room.property.name %></td>
                                <td><%= lease.room.roomNumber %></td>
                                <td><%= lease.startDate.toLocaleDateString() %></td>
                                <td><%= lease.endDate.toLocaleDateString() %></td>
                                <td>$<%= lease.rentAmount.toFixed(2) %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No leases found for this tenant.</p>
            <% } %>
            
            <a href="/agent/tenants/<%= tenant.id %>/edit" class="btn">Edit Tenant</a>
            <a href="/agent/tenants" class="btn">Back to Tenants</a>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>