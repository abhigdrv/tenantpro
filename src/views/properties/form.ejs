<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= title %></title>
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <%- include('../partials/sidebar') %>
        <section class="content">
            <h2><%= title %></h2>
            <form action="/agent/properties/<%= property ? property.id + '/edit' : '' %>" method="POST">
                <div class="form-group">
                    <label for="name">Property Name:</label>
                    <input type="text" name="name" id="name" value="<%= property ? property.name : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" name="address" id="address" value="<%= property ? property.address : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input type="text" name="city" id="city" value="<%= property ? property.city : '' %>">
                </div>
                <div class="form-group">
                    <label for="state">State:</label>
                    <input type="text" name="state" id="state" value="<%= property ? property.state : '' %>">
                </div>
                <div class="form-group">
                    <label for="zipCode">Zip Code:</label>
                    <input type="text" name="zipCode" id="zipCode" value="<%= property ? property.zipCode : '' %>">
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea name="description" id="description" rows="5"><%= property ? property.description : '' %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
    <i data-lucide="save"></i>
    <span>Save Property</span>
</button>
            </form>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>